<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - SubTracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    #calendar {
      max-width: 900px;
      margin: 20px auto 40px auto;
      padding: 15px;
      background: var(--bg-card, white);
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.05);
      font-size: 0.85em;
    }
    .fc-event {
      cursor: pointer;
      border: none;
    }
    .fc-header-toolbar {
      margin-bottom: 1em !important;
    }
    .fc-toolbar-title {
      font-size: 1.2em !important;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <%- include('partials/navbar') %>
    
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h4 mb-0">Mes abonnements</h1>
      <div>
        <% if (plaidConnected) { %>
          <button id="refresh-bank-btn" class="btn btn-outline-primary me-2">
            Actualiser les abonnements
          </button>
        <% } else { %>
          <button id="connect-bank-btn" class="btn btn-connect-bank me-2">Connecter ma banque</button>
        <% } %>
        <a class="btn btn-primary" href="/subscriptions/add">+ Ajouter</a>
      </div>
    </div>

    <% if (subscriptions.length > 0) { %>
      <div class="card mb-4">
        <div class="card-body">
          <div id="calendar"></div>
        </div>
      </div>
    <% } %>

    <% if (subscriptions.length === 0) { %>
      <div class="alert alert-info">Aucun abonnement pour le moment. Ajoutez-en un pour commencer ou connectez votre banque.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>Service</th>
              <th>Prix</th>
              <th>Cycle</th>
              <th>Prochaine √©ch√©ance</th>
              <th>Cat√©gorie</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% subscriptions.forEach(sub => { %>
              <tr>
                <td data-label="Service">
                  <span class="badge rounded-pill me-1 category-badge" data-category="<%= sub.category %>">‚óè</span>
                  <strong><%= sub.name %></strong>
                </td>
                <td data-label="Prix"><%= sub.price.toFixed(2) %> <%= sub.currency %></td>
                <td data-label="Cycle" class="text-capitalize"><%= sub.billingCycle %></td>
                <td data-label="Prochaine √©ch√©ance"><%= sub.nextPaymentDate.toISOString().slice(0,10) %></td>
                <td data-label="Cat√©gorie"><span class="badge bg-light text-dark border"><%= sub.category %></span></td>
                <td data-label="Actions" class="text-end">
                  <button 
                    class="btn btn-outline-primary btn-sm edit-subscription-btn" 
                    data-id="<%= sub._id %>"
                    data-name="<%= sub.name %>"
                    data-price="<%= sub.price %>"
                    data-currency="<%= sub.currency %>"
                    data-cycle="<%= sub.billingCycle %>"
                    data-next="<%= sub.nextPaymentDate.toISOString().slice(0,10) %>"
                    data-category="<%= sub.category %>"
                    data-bs-toggle="modal" 
                    data-bs-target="#editModal">
                    <i class="bi bi-pencil"></i> Modif.
                  </button>
                  <button class="btn btn-outline-secondary btn-sm generate-letter" data-name="<%= sub.name %>" data-price="<%= sub.price %>" data-currency="<%= sub.currency %>" data-cycle="<%= sub.billingCycle %>" data-next="<%= sub.nextPaymentDate.toISOString().slice(0,10) %>" data-category="<%= sub.category %>">Lettre</button>
                  <button class="btn btn-outline-danger btn-sm delete-subscription-btn" data-id="<%= sub._id %>" data-name="<%= sub.name %>" data-bs-toggle="modal" data-bs-target="#deleteModal">Suppr.</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Modifier l'abonnement</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editForm" method="POST">
            <div class="mb-3">
              <label class="form-label">Nom du service</label>
              <input type="text" class="form-control" name="name" id="editName" required>
            </div>
            <div class="row mb-3">
              <div class="col">
                <label class="form-label">Prix</label>
                <input type="number" step="0.01" class="form-control" name="price" id="editPrice" required>
              </div>
              <div class="col">
                <label class="form-label">Devise</label>
                <select class="form-select" name="currency" id="editCurrency">
                  <option value="EUR">EUR</option>
                  <option value="USD">USD</option>
                  <option value="GBP">GBP</option>
                </select>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Cycle de facturation</label>
              <select class="form-select" name="billingCycle" id="editCycle">
                <option value="monthly">Mensuel</option>
                <option value="yearly">Annuel</option>
                <option value="weekly">Hebdomadaire</option>
                <option value="quarterly">Trimestriel</option>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Prochaine √©ch√©ance</label>
              <input type="date" class="form-control" name="nextPaymentDate" id="editNext" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Cat√©gorie</label>
              <select class="form-select" name="category" id="editCategory" required>
                <option value="Divertissement">Divertissement</option>
                <option value="Musique">Musique</option>
                <option value="Professionnel">Professionnel</option>
                <option value="Nourriture">Nourriture</option>
                <option value="Sport">Sport</option>
                <option value="Autre">Autre</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Enregistrer les modifications</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="letterModal" tabindex="-1" aria-labelledby="letterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="letterModalLabel">Lettre de r√©siliation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <pre id="letterContent" class="mb-0"></pre>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="plaidSuccessModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content text-center p-4">
        <div class="modal-body">
          <h4 class="mb-3" id="plaidSuccessTitle">Connexion r√©ussie !</h4>
          <p id="plaidSuccessMessage" class="text-muted mb-4"></p>
          <button type="button" class="btn btn-primary w-100" onclick="window.location.reload()">Voir mes abonnements</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="loadingModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered modal-sm">
      <div class="modal-content text-center p-4">
        <div class="spinner-border text-primary mb-3" role="status"></div>
        <p class="mb-0 fw-bold">R√©daction en cours...</p>
        <small class="text-muted">On √©crit votre lettre</small>
      </div>
    </div>
  </div>

  <!-- Modal de confirmation de suppression -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <div class="modal-body">
          <p>√ätes-vous s√ªr de vouloir supprimer l'abonnement <strong id="deleteSubName"></strong> ?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
          <form id="deleteForm" method="POST" action="">
            <button type="submit" class="btn btn-danger">Supprimer</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/cancellation.js"></script>
  <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const calendarEl = document.getElementById('calendar');
      
      function getColorByCategory(category) {
        if (!category) return '#858796';
        const cat = category.toLowerCase();
        if (cat.includes('divertissement') || cat.includes('video') || cat.includes('stream') || cat.includes('netflix')) return '#3788d8';
        if (cat.includes('music') || cat.includes('musique') || cat.includes('spotify')) return '#1cc88a';
        if (cat.includes('pro') || cat.includes('work') || cat.includes('travail') || cat.includes('cloud')) return '#4e73df';
        if (cat.includes('food') || cat.includes('nourriture') || cat.includes('uber') || cat.includes('repas')) return '#f6c23e';
        if (cat.includes('sport') || cat.includes('gym') || cat.includes('fit') || cat.includes('sant√©')) return '#e74a3b';
        return '#858796';
      }

      if (calendarEl) {
        const rawSubscriptions = <%- JSON.stringify(subscriptions) %>;
        let calendarEvents = [];
        rawSubscriptions.forEach(sub => {
          let currentDate = new Date(sub.nextPaymentDate);
          const cycle = sub.billingCycle;
          const color = getColorByCategory(sub.category || sub.name);
          for (let i = 0; i < 12; i++) {
            calendarEvents.push({
              title: `${sub.name} (${sub.price} ${sub.currency})`,
              start: currentDate.toISOString().split('T')[0],
              backgroundColor: color,
              borderColor: color,
              allDay: true
            });
            if (cycle === 'monthly') currentDate.setMonth(currentDate.getMonth() + 1);
            else if (cycle === 'yearly') currentDate.setFullYear(currentDate.getFullYear() + 1);
            else if (cycle === 'weekly') currentDate.setDate(currentDate.getDate() + 7);
            else if (cycle === 'quarterly') currentDate.setMonth(currentDate.getMonth() + 3);
            else break;
          }
        });

        const calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          locale: 'fr',
          aspectRatio: 1.5,
          headerToolbar: { left: 'prev,next today', center: 'title', right: 'dayGridMonth,listMonth' },
          buttonText: { today: "Aujourd'hui", month: 'Mois', list: 'Liste' },
          events: calendarEvents
        });
        calendar.render();
      }

      document.querySelectorAll('.category-badge').forEach(badge => {
        const cat = badge.getAttribute('data-category');
        badge.style.color = getColorByCategory(cat || '');
      });

      const editBtns = document.querySelectorAll('.edit-subscription-btn');
      const editForm = document.getElementById('editForm');
      const editName = document.getElementById('editName');
      const editPrice = document.getElementById('editPrice');
      const editCurrency = document.getElementById('editCurrency');
      const editCycle = document.getElementById('editCycle');
      const editNext = document.getElementById('editNext');
      const editCategory = document.getElementById('editCategory');

      editBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          editName.value = btn.getAttribute('data-name');
          editPrice.value = btn.getAttribute('data-price');
          editCurrency.value = btn.getAttribute('data-currency');
          editCycle.value = btn.getAttribute('data-cycle');
          editNext.value = btn.getAttribute('data-next');
          const categoryValue = btn.getAttribute('data-category');
          if (categoryValue) editCategory.value = categoryValue;
          editForm.action = `/subscriptions/${id}/update`;
        });
      });

      // Gestion boutons Delete
      const deleteBtns = document.querySelectorAll('.delete-subscription-btn');
      const deleteForm = document.getElementById('deleteForm');
      const deleteSubName = document.getElementById('deleteSubName');

      deleteBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          const name = btn.getAttribute('data-name');
          deleteSubName.textContent = name;
          deleteForm.action = `/subscriptions/${id}/delete`;
        });
      });
    });
  </script>

  <script>
    // Bouton Connecter ma banque
    const connectBtn = document.getElementById('connect-bank-btn');
    if (connectBtn) {
      connectBtn.addEventListener('click', async () => {
        connectBtn.disabled = true;
        connectBtn.textContent = "Chargement...";
        try {
          const res = await fetch('/api/plaid/create_link_token', { method: 'POST' });
          const data = await res.json();
          const handler = Plaid.create({
            token: data.link_token,
            onSuccess: async (public_token, metadata) => {
              await fetch('/api/plaid/exchange_public_token', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ public_token }),
              });
              connectBtn.textContent = "Analyse en cours...";
              
              const txRes = await fetch('/api/plaid/transactions');
              const txData = await txRes.json();
              
              if (txData.success && txData.count > 0) {
                document.getElementById('plaidSuccessMessage').textContent = 
                  `${txData.count} abonnements ont √©t√© d√©tect√©s et ajout√©s √† votre tableau de bord.`;
                new bootstrap.Modal(document.getElementById('plaidSuccessModal')).show();
              } else {
                alert("Aucun abonnement d√©tect√©.");
                connectBtn.textContent = "Connecter ma banque";
                connectBtn.disabled = false;
              }
            },
            onExit: (err, metadata) => {
              connectBtn.disabled = false;
              connectBtn.textContent = "Connecter ma banque";
            },
          });
          handler.open();
        } catch (err) {
          console.error("Erreur:", err);
          alert("Erreur de connexion.");
          connectBtn.disabled = false;
          connectBtn.textContent = "Connecter ma banque";
        }
      });
    }

    // Bouton Actualiser les abonnements
    const refreshBtn = document.getElementById('refresh-bank-btn');
    if (refreshBtn) {
      refreshBtn.addEventListener('click', async () => {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Actualisation...';
        try {
          const txRes = await fetch('/api/plaid/transactions');
          const txData = await txRes.json();
          
          if (txData.success && txData.count > 0) {
            document.getElementById('plaidSuccessTitle').textContent = 'Actualisation termin√©e !';
            document.getElementById('plaidSuccessMessage').textContent = 
              `${txData.count} nouveaux abonnements ont √©t√© d√©tect√©s et ajout√©s.`;
            new bootstrap.Modal(document.getElementById('plaidSuccessModal')).show();
          } else if (txData.success && txData.count === 0) {
            document.getElementById('plaidSuccessTitle').textContent = 'Tout est √† jour !';
            document.getElementById('plaidSuccessMessage').textContent = 
              'Aucun nouvel abonnement d√©tect√©. Vos donn√©es sont d√©j√† √† jour.';
            new bootstrap.Modal(document.getElementById('plaidSuccessModal')).show();
          } else if (txData.error) {
            alert("Erreur: " + txData.error);
            refreshBtn.disabled = false;
            refreshBtn.innerHTML = 'üîÑ Actualiser les abonnements';
          }
        } catch (err) {
          console.error("Erreur:", err);
          alert("Erreur lors de l'actualisation.");
          refreshBtn.disabled = false;
          refreshBtn.innerHTML = 'üîÑ Actualiser les abonnements';
        }
      });
    }
  </script>
</body>
</html>